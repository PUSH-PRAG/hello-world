pipeline {
  agent any
  tools {
    maven 'maven-3.6.3' 
  }
  
  stages {
        stage ('checkout scm') {
            steps {
                // Please avoid committing your test changes to this repository
                git branch: 'master', url: "https://github.com/PUSH-PRAG/hello-world.git"
            }
        }
   }
    stage ('Build') {
      steps {
        bat 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomact-dev', path: '', url: 'http://localhost:8080')], contextPath: '/pipeline', onFailure: false, war: 'webapp/target/*.war' 
        }
      }
    }
  }
}
